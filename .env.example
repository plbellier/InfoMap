# InfoMap Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Required API Keys
# ===================

# Perplexity AI API key for news analysis
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google OAuth 2.0 credentials (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Session secret key (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET_KEY=your_secure_secret_key_here

# ===================
# Optional Settings
# ===================

# Email of the default administrator (will have full access)
ADMIN_EMAIL=admin@example.com

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://infomap.ovh

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://infomap.ovh,http://localhost:5173

# Environment mode (development or production)
ENVIRONMENT=production
